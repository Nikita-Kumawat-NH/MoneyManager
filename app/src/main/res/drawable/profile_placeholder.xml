<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#E0E0E0" />
            <size
                android:width="120dp"
                android:height="120dp" />
        </shape>
    </item>

    <!-- Person Icon -->
    <item
        android:bottom="24dp"
        android:left="24dp"
        android:right="24dp"
        android:top="24dp">
        <shape android:shape="oval">
            <solid android:color="#BDBDBD" />
        </shape>
    </item>

    <!-- Head Circle -->
    <item
        android:bottom="45dp"
        android:left="42dp"
        android:right="42dp"
        android:top="24dp">
        <shape android:shape="oval">
            <solid android:color="#E0E0E0" />
        </shape>
    </item>

    <!-- Body -->
    <item
        android:bottom="20dp"
        android:left="35dp"
        android:right="35dp"
        android:top="55dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>
</layer-list>
